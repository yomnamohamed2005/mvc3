@model department
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete @Model.name department</h1>
<form  method= "post" asp-action="Delete">
    <div class="form-group mt-5">
        <label asp-for="code"></label>
        <input readonly class="form-control" asp-for="code" />
        <span asp-validation-for="code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="name"></label>
        <input readonly class="form-control" asp-for="name" />
        <span asp-validation-for="name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="time"></label>
        <input readonly class=form-control asp-for="time" />
        <span asp-validation-for="time" class="text-danger"></span>

    </div>
    <div class="mt-3">
        <button class="btn-success" type="submit"> Delete </button>
        <a class=" btn btn-danger" asp-action="Index">back</a>

    </div>
</form>
