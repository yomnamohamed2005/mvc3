@model department 
@{
    ViewData["Title"] = "details";
}
<h1>@Model.name Department details</h1>
<form asp-action="details">
    <div class="form-group mt-5">
        <label asp-for="code"></label>
        <input readonly class="form-control" asp-for="code" />
        <span asp-validation-for="code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="name"></label>
        <input readonly class="form-control" asp-for="name" />
        <span asp-validation-for="name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="time"></label>
        <input readonly class=form-control asp-for="time" />
        <span asp-validation-for="time" class="text-danger"></span>

    </div>
    <div class="mt-3">
        < class="btn-success" asp-action="Edit" asp-route-id="@Model.id"> Edit</>
        <a class=" btn btn-danger" asp-action="Index">back</a>

    </div>
</form>


